<odoo>
    <data>

        <!-- Tree group-->
        <record id="shutdown_system_view_tree" model="ir.ui.view">
            <field name="name">shutdown.system.view.tree</field>
            <field name="model">shutdown.system</field>
            <field name="arch" type="xml">
                <tree string="Shutdown System">
                    <field name="notes" />
                    <field name="type"/>
                    <field name="warehouse_id" />
                    <field name="time"/>
                    <field name="state" />
                </tree>
            </field>
        </record>

        <!-- === FORM AREA === -->
        <record id="shutdown_system_view_form" model="ir.ui.view">
            <field name="name">shutdown.system.view.form</field>
            <field name="model">shutdown.system</field>
            <field name="arch" type="xml">
                <form string="Shutdown System">
                    <header>
                        <button name="approve_button" type="object" string="Request" states="draft" class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,approve" />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!-- attrs="{'invisible': [('job_order_id', '=', False)]}" -->
                            <button name="create_open_job_order" class="oe_stat_button" type="object" icon="fa fa-book">
                                <field name="job_order_id" widget="statinfo" string="Job Order"/>
                            </button>
                        </div>
                        <group col="4">
                            <field name="warehouse_id"/>
                            <field name="time"/>
                            <field name="notes" colspan="4"/>

                            <field name="jadwal_pelaksana"/>
                            <field name="attachment" widget="binary" filename="filename"/>
                            <field name="filename" invisible="1"/>
                            <field name="type" invisible="1"/>
                        </group>
                        <group col="4">
                            <field name="request_id"/>
                            <field name="approve_id"/>
                        </group>


                    </sheet>
                    <!-- <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div> -->
                </form>
            </field>
        </record>



        <!-- Action group-->
        <record id="shutdown_system_req_action" model="ir.actions.act_window">
            <field name="name">Shutdown System</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shutdown.system</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_trouble','=', True)]</field>
            <field name="context">{'default_is_trouble':True}</field>
        </record>

    </data>
</odoo>